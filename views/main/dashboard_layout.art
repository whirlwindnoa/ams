<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>AMS - {{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/layout.css">
</head>
<body>
<header class="topbar">
    <div class="brand">
        <span class="logo-circle">A</span>
        <span class="brand-text">Auditorium Manager</span>
    </div>
    <div class="topbar-right">
        <input type="text" class="search" placeholder="Search events, bookings...">
        <div class="user">
            <span class="user-name">{{ user.email }} </span>
            <a href="/api/auth/logout" class="btn small ghost logout-btn">Sign Out</a>
        </div>
        
    </div>
</header>

<div class="layout">
    <nav class="sidebar">
        <ul>
            <li class="sidebar-section">Main</li>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/events">Events</a></li>
            <li><a href="/bookings">Bookings</a></li>
            <li><a href="/dashboard/plan">Seating Plan</a></li>

            <li class="sidebar-section">Management</li>
            <li><a href="/clients">Clients</a></li>
            <li><a href="/staff">Staff</a></li>
            <li><a href="/reports">Reports</a></li>
            <li><a href="/settings">Settings</a></li>
        </ul>
    </nav>

    <main class="main">
        {{block "content"}}
        {{/block}}
    </main>
</div>
</body>
<script>
    // Highlight active sidebar link
    document.addEventListener("DOMContentLoaded", () => {
        const sidebarLinks = document.querySelectorAll(".sidebar a");
        const currentPath = window.location.pathname;

        sidebarLinks.forEach(link => {
            if (link.getAttribute("href") == currentPath) {
                link.parentElement.classList.add("active");
            }
        });
    });
</script>
</html>
